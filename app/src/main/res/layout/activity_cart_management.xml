<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_light_background">

    <!-- Top App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_4"
        android:background="@color/md_theme_light_primary"
        android:elevation="@dimen/elevation_level_2">

        <Button
            android:id="@+id/backButton"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="20sp"
            android:textColor="@color/md_theme_light_onPrimary"
            android:background="@android:color/transparent"
            android:minWidth="48dp"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="مدیریت سبد خرید"
            android:textColor="@color/md_theme_light_onPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

        <Button
            android:id="@+id/clearCartButton"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="پاک کردن"
            android:textSize="14sp"
            android:textColor="@color/md_theme_light_onPrimary"
            android:background="@android:color/transparent"
            android:minWidth="48dp"
            android:minHeight="48dp" />

    </LinearLayout>

    <!-- Cart Summary -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_3"
        style="@style/CardStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_3"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/totalItemsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تعداد کل: 0"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/totalAmountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مبلغ کل: 0 تومان"
                    android:textColor="@color/md_theme_light_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <Button
                android:id="@+id/proceedToPaymentButton"
                style="@style/ButtonPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ادامه به پرداخت"
                android:textSize="14sp"
                android:enabled="false" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Cart Items List -->
    <ListView
        android:id="@+id/cartListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/spacing_2"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/spacing_2" />

</LinearLayout>
