    <!-- Material Design 3 Card Styles -->
    <style name="CardStyle" parent="android:Widget">
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">1dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/md_theme_light_surface</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="CardStyleElevated" parent="CardStyle">
        <item name="android:elevation">3dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="CardStyleFilled" parent="CardStyle">
        <item name="cardBackgroundColor">@color/md_theme_light_surfaceContainerHighest</item>
        <item name="android:elevation">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

