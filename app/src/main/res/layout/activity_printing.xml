<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_light_background">

    <!-- Top App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_4"
        android:background="@color/md_theme_light_primary"
        android:elevation="@dimen/elevation_level_2">

        <Button
            android:id="@+id/backButton"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="20sp"
            android:textColor="@color/md_theme_light_onPrimary"
            android:background="@android:color/transparent"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/printing"
            android:textColor="@color/md_theme_light_onPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

        <View
            android:layout_width="48dp"
            android:layout_height="1dp" />

    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/spacing_4">

        <!-- Current Printing Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_3"
            style="@style/CardStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_4"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="در حال پرینت"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="@dimen/spacing_3" />

                <ImageView
                    android:id="@+id/previewImageView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="@color/md_theme_light_surfaceContainerLow"
                    android:elevation="@dimen/elevation_level_1"
                    android:src="@drawable/ic_image_placeholder" />

                <TextView
                    android:id="@+id/currentImageNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نام تصویر"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="@dimen/spacing_2" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Progress Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_3"
            style="@style/CardStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="پیشرفت پرینت"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="@dimen/spacing_3" />

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginBottom="@dimen/spacing_2"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/md_theme_light_primary" />

                <!-- Status Display -->
                <TextView
                    android:id="@+id/statusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="در حال آماده‌سازی پرینت..."
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:background="@color/md_theme_light_surfaceContainerLow"
                    android:padding="@dimen/spacing_2"
                    android:elevation="@dimen/elevation_level_1" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Print Queue -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/CardStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/spacing_4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="صف پرینت"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="@dimen/spacing_3" />

                <!-- Print Queue List -->
                <ListView
                    android:id="@+id/printQueueListView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="@dimen/spacing_1"
                    android:clipToPadding="false" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
