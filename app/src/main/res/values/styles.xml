        <item name="colorPrimaryDark">@color/md_theme_light_tertiary</item>
        <item name="colorAccent">@color/md_theme_light_tertiary</item>
        <item name="android:windowBackground">@color/md_theme_light_tertiaryContainer</item>
    </style>

    <!-- User Theme -->
    <style name="UserTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorPrimaryDark">@color/md_theme_light_primary</item>
        <item name="colorAccent">@color/md_theme_light_primary</item>
        <item name="android:windowBackground">@color/md_theme_light_primaryContainer</item>
    </style>

