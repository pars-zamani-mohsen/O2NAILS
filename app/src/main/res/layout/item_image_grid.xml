<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/card_background"
    android:padding="@dimen/padding_extra_small"
    android:elevation="@dimen/elevation_small">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/infoLayout"
        android:scaleType="centerCrop"
        android:background="@color/white"
        android:adjustViewBounds="true" />

    <!-- Selection Overlay -->
    <View
        android:id="@+id/selectionOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/infoLayout"
        android:background="@color/md_theme_light_primary"
        android:alpha="0.3"
        android:visibility="gone" />

    <!-- Quantity Badge -->
    <TextView
        android:id="@+id/quantityBadge"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:layout_marginStart="@dimen/margin_extra_small"
        android:background="@drawable/button_primary_md3"
        android:textColor="@color/md_theme_light_onPrimary"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="@dimen/padding_extra_small"
        android:background="@color/semi_transparent_black">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نام تصویر"
            android:textColor="@color/white"
            android:textSize="@dimen/extra_small_text_size"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/typeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نوع"
            android:textColor="@color/white"
            android:textSize="@dimen/extra_small_text_size"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <ImageView
        android:id="@+id/favoriteIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:layout_marginEnd="@dimen/margin_extra_small"
        android:src="@drawable/ic_favorite"
        android:visibility="gone" />

</RelativeLayout>
