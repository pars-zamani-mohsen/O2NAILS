<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_light_background">

    <!-- Top App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_4"
        android:background="@color/md_theme_light_primary"
        android:elevation="@dimen/elevation_level_2">

        <Button
            android:id="@+id/backButton"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="20sp"
            android:textColor="@color/md_theme_light_onPrimary"
            android:background="@android:color/transparent"
            android:minWidth="48dp"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/print_quantity"
            android:textColor="@color/md_theme_light_onPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

        <View
            android:layout_width="48dp"
            android:layout_height="1dp" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/md_theme_light_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_4">

            <!-- Image Preview Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_4"
                style="@style/CardStyle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preview_image"
                        android:textColor="@color/md_theme_light_onSurface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="@dimen/spacing_3" />

                    <ImageView
                        android:id="@+id/previewImageView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:background="@color/md_theme_light_surfaceContainerLow"
                        android:elevation="@dimen/elevation_level_2"
                        android:src="@drawable/ic_image_placeholder" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Quantity Selection Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_4"
                style="@style/CardStyle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quantity"
                        android:textColor="@color/md_theme_light_onSurface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="@dimen/spacing_4" />

                    <!-- Quantity Display and Controls -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/spacing_4">

                        <!-- Decrease Button -->
                        <Button
                            android:id="@+id/decreaseButton"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:text="-"
                            android:textSize="24sp"
                            android:textColor="@color/md_theme_light_primary"
                            android:fontFamily="sans-serif"
                            android:background="@drawable/button_outlined_md3"
                            android:layout_marginEnd="@dimen/spacing_4" />

                        <!-- Quantity Display -->
                        <TextView
                            android:id="@+id/quantityTextView"
                            android:layout_width="80dp"
                            android:layout_height="56dp"
                            android:text="1"
                            android:textColor="@color/md_theme_light_primary"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            android:background="@color/md_theme_light_surfaceContainerLow"
                            android:layout_marginHorizontal="@dimen/spacing_2" />

                        <!-- Increase Button -->
                        <Button
                            android:id="@+id/increaseButton"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:text="+"
                            android:textSize="24sp"
                            android:textColor="@color/md_theme_light_onPrimary"
                            android:fontFamily="sans-serif"
                            android:background="@drawable/button_primary_md3"
                            android:layout_marginStart="@dimen/spacing_4" />

                    </LinearLayout>

                    <!-- Price Information -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_3"
                        android:background="@color/md_theme_light_surfaceContainerLow"
                        android:elevation="@dimen/elevation_level_1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/spacing_2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="قیمت هر پرینت:"
                                android:textColor="@color/md_theme_light_onSurfaceVariant"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/pricePerPrintTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5,000 تومان"
                                android:textColor="@color/md_theme_light_onSurface"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/md_theme_light_outline"
                            android:layout_marginVertical="@dimen/spacing_2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="مبلغ کل:"
                                android:textColor="@color/md_theme_light_onSurface"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/totalAmountTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5,000 تومان"
                                android:textColor="@color/md_theme_light_primary"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="@dimen/spacing_4"
        android:background="@color/md_theme_light_surfaceContainerLow">

        <Button
            android:id="@+id/nextButton"
            style="@style/ButtonPrimary"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/proceed_to_payment"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>