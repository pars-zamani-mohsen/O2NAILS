<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_medium"
            android:layout_marginBottom="@dimen/margin_large">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/admin_dashboard"
                android:textColor="@color/md_theme_light_onBackground"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="100dp"
                android:layout_height="56dp"
                style="@style/ButtonSecondary"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Welcome Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/md_theme_light_primaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large"
                android:gravity="center">

                <TextView
                    android:id="@+id/welcomeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="خوش آمدید، مدیر سیستم"
                    android:textColor="@color/md_theme_light_onPrimaryContainer"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="پنل مدیریت سیستم ناخن"
                    android:textColor="@color/md_theme_light_onPrimaryContainer"
                    android:textSize="14sp"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/md_theme_light_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="آمار سیستم"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <TextView
                    android:id="@+id/statsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="قیمت فعلی: 5,000 تومان\nکل تراکنش‌ها: 0"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Main Menu Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_large">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_medium">

                <!-- Price Settings Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_small"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/md_theme_light_secondaryContainer">

                    <Button
                        android:id="@+id/priceSettingsButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="@string/price_settings"
                        android:textColor="@color/md_theme_light_onSecondaryContainer"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <!-- Image Management Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_small"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/md_theme_light_tertiaryContainer">

                    <Button
                        android:id="@+id/imageManagementButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="@string/image_management"
                        android:textColor="@color/md_theme_light_onTertiaryContainer"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_medium">

                <!-- System Settings Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_small"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/md_theme_light_surfaceVariant">

                    <Button
                        android:id="@+id/systemSettingsButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="@string/system_settings"
                        android:textColor="@color/md_theme_light_onSurfaceVariant"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <!-- Reports Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_small"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/md_theme_light_surfaceContainerHigh">

                    <Button
                        android:id="@+id/reportsButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="@string/reports"
                        android:textColor="@color/md_theme_light_onSurface"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Row 3 - Password Change -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Password Change Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_small"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/md_theme_light_errorContainer">

                    <Button
                        android:id="@+id/passwordChangeButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="تغییر رمز عبور"
                        android:textColor="@color/md_theme_light_onErrorContainer"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <!-- Empty space for future features -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_small" />

            </LinearLayout>

        </LinearLayout>

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/md_theme_light_surfaceContainerLow">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_medium">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:background="@drawable/status_indicator_online" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="سیستم آنلاین"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
